<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
>
    <!--TODO optmize layouts-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/card_view"
        android:layout_margin="10dp"
        android:elevation="3dp"
>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cover" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/cover"
                android:layout_marginTop="-30dp"
                android:alpha=".4"
                android:background="#000"
                android:visibility="visible"
                android:id="@+id/cover_bottom" />

            <ImageView
                android:id="@+id/star_rate_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cover"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                app:srcCompat="@drawable/star_128" />

            <TextView
                android:id="@+id/star_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/star_rate_icon"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/star_rate_icon"
                android:text="7.43" />

            <ImageView
                android:id="@+id/rank"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignEnd="@+id/map_name"
                android:layout_alignTop="@+id/star_rate"
                app:srcCompat="@drawable/ss" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/star_rate_icon"
                android:layout_below="@+id/star_rate_icon"
                android:layout_marginTop="11dp"
                android:text="+HDHR" />

            <View
                android:layout_width="1dp"
                android:background="@color/FeedTitleColor"
                android:layout_toEndOf="@id/username"
                android:layout_alignBottom="@id/star_rate_icon"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="33dp"
                android:layout_height="30dp"
                android:id="@+id/delimiter" />

            <TextView
                android:id="@+id/username"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/cover_bottom"
                android:layout_alignStart="@+id/cover_bottom"
                android:gravity="center|right"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/FeedTitleColor"
                android:textSize="16sp"
                tools:text="Kablaze" />

            <TextView
                android:id="@+id/map_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBottom="@id/cover_bottom"
                android:layout_toEndOf="@id/delimiter"
                android:paddingLeft="10dp"
                android:text="Hitorigoto -TV MIX- [Soloqui]"
                android:textColor="@color/FeedTitleColor"
                android:gravity="center|right"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/FC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_toEndOf="@+id/star_rate"
                android:text="FC" />

            <TextView
                android:id="@+id/pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/star_rate_icon"
                android:layout_centerHorizontal="true"
                android:text="700pp" />

            <TextView
                android:id="@+id/acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/FC"
                android:layout_alignBottom="@+id/FC"
                android:layout_alignStart="@+id/pp"
                android:text="@string/default_acc" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
